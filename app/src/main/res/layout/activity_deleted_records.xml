<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/mainDeleteLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/actionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/recently_deleted"
                android:textColor="@color/black"
                android:textSize="32dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/editInDelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:background="@android:color/transparent"
                android:text="@string/edit"
                android:textAlignment="textEnd"
                android:textColor="@color/light_red" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/custom_search_bar"
            android:layout_margin="12dp"
            android:padding="4dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/search"
                android:padding="8dp"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="32dp"
                android:background="@android:color/transparent"
                android:hint="Search"
                android:textColorHint="@color/grey"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/underline" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recentlyDeletedRecyclerView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight=".90"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/custom_recyclerview_for_records"
            android:paddingBottom="44dp"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/deleteUtilsLayout"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:background="@color/main_theme">

        <Button
            android:id="@+id/recoverInDelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@android:color/transparent"
            android:text="Khôi phục"
            android:textColor="@color/light_red"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"/>

        <Button
            android:id="@+id/deleteInDelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xóa"
            android:textColor="@color/light_red"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</RelativeLayout>
