<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/custom_diaglog"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/mainTitleDialogMakeChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/light_red"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/descriptionDialogMakeChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="@color/aux_item"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textAlignment="center"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/underline"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/noDialogMakeChange"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".50"
                android:background="@drawable/button_cancel_dialog_click"
                android:text="@string/no"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="@color/black" />

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@drawable/underline"/>

            <Button
                android:id="@+id/yesDialogMakeChange"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".50"
                android:background="@drawable/button_save_dialog_click"
                android:text="@string/yes"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="@color/black"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>